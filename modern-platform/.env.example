# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES="pdf,doc,docx,xls,xlsx,jpg,jpeg,png"

# Business Logic Configuration
WSAR_SCORING_WEIGHTS_PATH="./config/wsar-weights.json"
